<%= form_with(model: city, remote: true, role: "form")do |form| %>
  <% if city.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if city.slug %>
  <div class="row">
    <div class="col">
      <div class="form-group mb-3">
        <label class="form-control-label" for="city-<%= city.slug %>">Nama Kabupaten/Kota</label>
        <%= form.text_field :city, id: "city-#{city.slug}",class: "form-control", placeholder: 'Nama Kabupaten/Kota', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="mayor-<%= city.slug %>">Bupati/Walikota</label>
        <%= form.text_field :mayor, id: "mayor-#{city.slug}",class: "form-control", placeholder: 'Bupati/Walikota', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="vice_mayor-<%= city.slug %>">Wakil Bupati/Walikota</label>
        <%= form.text_field :vice_mayor, id: "vice_mayor-#{city.slug}",class: "form-control", placeholder: 'Wakil Bupati/Walikota', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="area-<%= city.slug %>">Luas Wilayah</label>
        <%= form.text_field :area, id: "area-#{city.slug}",class: "form-control", placeholder: 'Luas Wilayah', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="population-<%= city.slug %>">Jumlah Penduduk</label>
        <%= form.text_field :population, id: "population-#{city.slug}",class: "form-control", placeholder: 'Jumlah Penduduk', autocomplete: "off", required: true %>
