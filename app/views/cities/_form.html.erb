      <div class="form-group mb-3">
        <label class="form-control-label" for="sub_district-<%= city.slug %>">Jumlah Kecamatan</label>
        <%= form.text_field :sub_district, id: "sub_district-#{city.slug}",class: "form-control", placeholder: 'Jumlah Kecamatan', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="village-<%= city.slug %>">Jumlah Kelurahan/Desa</label>
        <%= form.text_field :village, id: "village-#{city.slug}",class: "form-control", placeholder: 'Jumlah Kelurahan/Desa', autocomplete: "off", required: true %>
      </div>
    </div>
    <div class="col">
      <div class="form-group mb-3">
        <label class="form-control-label" for="head_of_kesbangpol-<%= city.slug %>">Kepala Kesbangpol</label>
        <%= form.text_field :head_of_kesbangpol, id: "head_of_kesbangpol-#{city.slug}",class: "form-control", placeholder: 'Kepala Kesbangpol', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="head_division-<%= city.slug %>">Kepala Bagian</label>
        <%= form.text_field :head_divion, id: "head_division-#{city.slug}",class: "form-control", placeholder: 'Kepala Bagian', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="address-<%= city.slug %>">Alamat</label>
        <%= form.text_area :address, id: "address-#{city.slug}",class: "form-control", placeholder: 'Alamat', autocomplete: "off", required: true, rows: "4", resize: "none" %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="telp-<%= city.slug %>">Nomor Telepon</label>
        <%= form.text_field :telp, id: "telp-#{city.slug}",class: "form-control", placeholder: 'Nomor Telepon', autocomplete: "off", required: true %>
      </div>
      <div class="form-group mb-3">
        <label class="form-control-label" for="email-<%= city.slug %>">Email</label>
        <%= form.text_field :email, id: "email-#{city.slug}",class: "form-control", placeholder: 'Email', autocomplete: "off", required: true %>
      </div>
      <div class="form-group">
        <label class="form-control-label" for="logo-<%= city.slug %>">Logo</label>
        <div class="custom-file">
          <%= form.file_field :logo_city, id: "logo-city-#{city.slug}", class: "custom-file-input", "data-multiple-caption": "{count} files selected", autocomplete: "off", lang: "en" %>
          <label class="custom-file-label" for="logo-city-<%=city.slug%>">Unggah Logo</label>
        </div>
      </div>
    </div>
  </div>
