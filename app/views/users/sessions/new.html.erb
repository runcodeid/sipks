<body class="bg-white">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <div class="main-content">
    </div>
    <div class="container py-8">
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
          <div class="card bg-login border-0 mb-0">
            <div class="card-body px-lg-5 py-lg-5">
              <div class="text-center text-muted mb-3">
                <h2 class="text-white">SISTEM INFORMASI PENANGANAN KONFLIK SOSIAL</h2>
              </div>
              <div class="text-center mb-3">
                <%= image_tag ('/assets/img/brand/logo-kalsel.png'), class: "sign-in-logo" %>
              </div>
              <div class="text-center text-muted mb-4">
                <h2 class="text-white">BAKESBANGPOL</br>KALIMANTAN SELATAN</h2>
              </div>
              <form role="form">
                <div class="form-group mb-3">
                  <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-circle-08"></i></span>
                    </div>
                    <%= f.text_field :login, id: "username_login",class: 'form-control', placeholder:'Username/Email', autofocus: true, autocomplete: "email",required:true %>
                    <div class="invalid-feedback">
                      Username/Email Salah!
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                    </div>
                    <%= f.password_field :password, id: "password_login", autocomplete: "current-password", class:'form-control', placeholder:'Password', required:true%>
                    <div class="invalid-feedback">
                      Password Salah!
                    </div>
                  </div>
                </div>
                <div class="custom-control custom-control-alternative custom-checkbox">
                  <%= f.check_box :remember_me, class:"custom-control-input", id:" customCheckLogin", type:"checkbox" %>
                  <label class="custom-control-label" for=" customCheckLogin">
                    <span class="text-white text-muted">Remember me</span>
                  </label>
                </div>
                <div class="text-center actions">
                  <%= f.submit 'SIGN IN', class: "btn btn-neutral my-4" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
<% flash.each do |type, msg| %>
  <% if type == "notice" %>
    <div class="sessions-notification" data-notifikasi="<%=flash.notice%>" data-type="notice"></div>
  <% elsif type == "alert" %>
    <div class="sessions-notification" data-notifikasi="<%=flash.alert%>" data-type="alert"></div>
  <% end %>>
<% end %>
