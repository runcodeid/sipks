<body class="bg-light">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <div class="main-content">
    </div>
    <div class="container px-5">
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

          <div class="bg-light border-0 mb-0">
            <div class="card-body px-lg-5 py-lg-5">
              <div class="text-center text-muted mb-4">
                <%= image_tag ('/assets/img/brand/blue.png'), class: "sign-in-logo" %>
                <h2> SIGN IN </h2>
              </div>
              <form role="form">
                <div class="form-group mb-3">
                  <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-circle-08"></i></span>
                    </div>
                    <%= f.text_field :email, class: 'form-control', placeholder:'Username/Email', autofocus: true, autocomplete: "email",required:true %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                    </div>
                    <%= f.text_field :password, autocomplete: "current-password", class:'form-control', placeholder:'Password', required:true%>
                  </div>
                </div>
                <div class="custom-control custom-control-alternative custom-checkbox">
                  <%= f.check_box :remember_me, class:"custom-control-input", id:" customCheckLogin", type:"checkbox" %>
                  <label class="custom-control-label" for=" customCheckLogin">
                    <span class="text-muted">Remember me</span>
                  </label>
                </div>
                <div class="text-center actions">
                  <button type="submit" class="btn btn-primary my-4">SIGN IN</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
